
@{
    ViewBag.Title = "PatDisplay";
}

<h2>Un-Identified Patient Display</h2>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>


    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Media/Images/critical.jpg">
            <div class="carousel-caption">
                <h3 style="color:black">Current Location : Tigerberg Hospital</h3>
                <p style="color:black">Condition : Critical</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Media/Images/minor.jpg">
            <div class="carousel-caption">
                <h3 style="color:black">Current Location : SA Sub Center</h3>
                <p style="color:black">Condition : Minor Injuries</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Media/Images/severe.jpg">
            <div class="carousel-caption">
                <h3 style="color:black">Current Location : In-Tansit to Helen Joshephs Hospital</h3>
                <p style="color:black">Condition : Severe injuries but stable</p>
            </div>
        </div>
    </div>

    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

