@model u04598637_HW04.ViewModels.Patient
@{
    ViewBag.Title = "Update Patient";
}

<h2>Update Patient Details</h2>

@using (Html.BeginForm("UpdatePatient", "Patient", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName)
        @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LastName)
        @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Age)
        @Html.EditorFor(m => m.Age, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Gender)
        @Html.EditorFor(m => m.Gender, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Status)
        @Html.EditorFor(m => m.Status, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Location)
        @Html.EditorFor(m => m.Location, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <input type="submit" class="btn btn-success" />

}